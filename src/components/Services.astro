---
// src/components/Portfolio.astro
import ProjectCard from './ProjectCard.astro';

const projects = [
  {
    title: "Web Design",
    description: "Clean, responsive websites focused on user experience."
  },
  {
    title: "Brand Identity",
    description: "Cohesive visual identities that communicate your brand's essence clearly."
  },
  {
    title: "Digital Strategy",
    description: "Data-driven approaches to enhance your digital presence and engagement."
  },
  {
    title: "Mobile Experience",
    description: "Native and responsive mobile solutions optimized for performance."
  },
  {
    title: "E-commerce",
    description: "Conversion-focused online stores with seamless user journeys."
  },
  {
    title: "Content Management",
    description: "Custom CMS solutions for easy content updates and management."
  }
];
---

<section class="portfolio" id="portfolio">
  <h2 class="section-title">Services</h2>
  <div class="grid">
    {projects.map(project => (
      <ProjectCard 
        title={project.title}
        description={project.description}
      />
    ))}
  </div>
</section>

<style>
  .portfolio {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  @media (max-width: 768px) {
    .portfolio {
      padding: 2rem 1rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>