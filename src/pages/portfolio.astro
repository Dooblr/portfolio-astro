---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "SaaS Landing Page",
    description: "A sleek startup site built with React + Firebase auth.",
    image: "https://via.placeholder.com/400x200",
    link: "#"
  },
  {
    title: "E-commerce Store",
    description: "Firebase-powered demo store with cart & checkout flow.",
    image: "https://via.placeholder.com/400x200",
    link: "#"
  },
  {
    title: "Photography Portfolio",
    description: "Image-heavy portfolio with responsive grid gallery.",
    image: "https://via.placeholder.com/400x200",
    link: "#"
  }
];
---

<BaseLayout>
  <section>
    <h2>Portfolio</h2>
    <div class="grid">
      {projects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>
</BaseLayout>
